<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linear_picture"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <org.raphets.roundimageview.RoundImageView
            android:layout_marginTop="5dp"
            android:id="@+id/user_picture"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/head5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/linear_picture"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp">

        <TextView
            android:id="@+id/item_search_name"
            tools:text="-messi-"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/accent_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_search_signature"
            android:textColor="@color/accent_black"
            android:layout_marginTop="5dp"
            tools:text="用户个性签名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_search_address"
            android:layout_marginTop="5dp"
            tools:text="武汉"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#d4d2d2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <Button
        android:id="@+id/btn_item_search_add_friend"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:text="添加"
        android:textColor="#585757"
        android:background="@drawable/agree"
        android:layout_width="65dp"
        android:layout_height="32dp" />

</RelativeLayout>